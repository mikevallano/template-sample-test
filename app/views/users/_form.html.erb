<%= form_for(@user) do |f| %>


  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
   <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>

  <%= f.collection_select(:role_ids, Role.all, :id, :name, { :label => "Select Role" }, { :multiple => true, :size => 5, :class => "form-control" } ) %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>